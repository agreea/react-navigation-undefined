{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "es2015",
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build/dist",
    "baseUrl": "./app/",
    "paths": {
      "@/*": ["./*"]
    },
    "sourceMap": true,
    "watch": true,
    "strict": true,
    "target": "es2015",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node"
  },
  "exclude": ["build", "node_modules"],
  "types": ["typePatches"]
}
